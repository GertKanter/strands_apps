<launch>
  <arg name="machine" default="localhost" />
  <arg name="user" default="" />

  <!-- now has an IF checking for the arg "remote" -->
  <machine name="$(arg machine)" address="$(arg machine)" env-loader="$(env ROS_ENV_LOADER)" user="$(arg user)" default="true" />

  <node pkg="ramp_climb" type="ramp_climb" name="ramp_climbing" output="screen" >
  </node>
</launch> 
